<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="parts_sales_report_1_search" model="ir.ui.view">
        <field name="name">parts.sales.report.1.search</field>
        <field name="model">view.parts.sales.report.1</field>
        <field name="arch" type="xml">
            <search string="Parts - Sales Report - 1 Search">
                <field name="confirmation_date"/>
                <field name="customer_name"/>
                <filter string="This Year" name="year" invisible="1" domain="[('confirmation_date','&lt;=', time.strftime('%%Y-12-31')),('confirmation_date','&gt;=',time.strftime('%%Y-01-01'))]"/>
                <group expand="1" string="Group by">
                    <filter string="Customer" name="by_customer" context="{'group_by':'customer_name'}"/>
                    <filter string="Charged to" name="by_charged_to" context="{'group_by':'charged_to'}"/>
                </group>
			</search>
		</field>		
	</record>
    <record model="ir.ui.view" id="fas_parts_sales_report_1_tree">
		<field name="name">fas.parts.sales.report.1.tree</field>
		<field name="model">view.parts.sales.report.1</field>
		<field name="arch" type="xml">
            <tree string="Parts - Sales Report - 1" create="false">
                <field name="customer_name"/>
                <field name="so_number"/>
                <field name="polo_number"/>
                <field name="charged_to"/>
                <field name="confirmation_date"/>
                <field name="source_code"/>
                <field name="part_number"/>
                <field name="description"/>
                <field name="order_qty"/>
                <field name="qty_delivered"/>
                <field name="qty_unserved"/>
                <field name="price_unit"/>
                <field name="price_total"/>
                <field name="invoice_status"/>
            </tree>
        </field>
    </record>

    <record id="parts_sales_report_1_pivot" model="ir.ui.view">
        <field name="name">parts.sales.report.1.pivot</field>
        <field name="model">view.parts.sales.report.1</field>
        <field name="arch" type="xml">
            <pivot string="Sales Analysis" disable_linking="True">
                <field name="customer_name" type="row"/>
                <field name="price_total" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="parts_sales_report_1_graph" model="ir.ui.view">
        <field name="name">parts.sales.report.1.graph</field>
        <field name="model">view.parts.sales.report.1</field>
        <field name="arch" type="xml">
            <graph string="Sales Analysis">
                <field name="customer_name" type="row"/>
                <field name="price_total" type="measure"/>
            </graph>
        </field>
    </record>

    <record model="ir.actions.act_window" id="fas_parts_sales_report_1_action_window">
        <field name="name">Parts - Sales Report - 1</field>
        <field name="res_model">view.parts.sales.report.1</field>
        <field name="view_mode">pivot,graph,tree</field>
        <field name="view_type">form</field>
        <field name="search_view_id" ref="parts_sales_report_1_search"/>
        <field name="context">{'search_default_year': 1, 'search_default_by_customer': 1}</field>
    </record>
    <menuitem name="Parts" id="fas_parts_reports_menu" 
        parent="sale.menu_sale_report" groups="one.parts_managers"/>
    <menuitem name="Sales Report - 1" id="fas_parts_sales_report_1_menu" 
        parent="one.fas_parts_reports_menu" action="fas_parts_sales_report_1_action_window"  
        groups="one.parts_managers,one.msd_administrators"/>
</odoo>