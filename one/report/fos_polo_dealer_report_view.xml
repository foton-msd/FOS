<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <template id="one.repair_order_template">
   <t t-call="web.html_container">
   <t t-foreach="docs" t-as="o">
    <t t-call="web.external_layout">
     <div class="page">
     <div class="oe_structure"/>
            <h2 align="center">
                 <span>Repair Order: </span>
                 <span t-field="o.name"/><br/><br/>
            </h2>
            <div class="row">
              <div class="col-xs-6">
                <strong>To: </strong><span>United Asia Automotive Group, Inc.</span>
              </div>
              <div class="col-xs-6">
                <strong>Date: </strong><span t-field="o.date"/>
              </div>
            </div>
          <br/><b/>
                <h4>
                 <span>Order Details</span><br/><b/>
                </h4>    

        <table width="100%">
            <tr>
              <th>FOTON Number</th>
              <th>Part Number</th>
              <th>Description</th>
              <th class="text-center">Order Qty</th>
              <th class="text-center">Unit Price</th>
              <th class="text-center">Vat Amount</th>
              <th class="text-center">Total</th>
              <th class="text-center">Total with VAT</th>
              <th class="text-center">Assigned Product Name</th>
              <th class="text-center">Assigned Product Price</th>
              <th class="text-center">Assigned Subtotal</th>
              <th class="text-center">Total with VAT</th>
                <t t-foreach="o.order_line" t-as="ol">
                  <tr>
                      <td><span t-field="ol.si_number"/></td>
                      <td><span t-field="ol.si_date"/></td>
                      <td><span t-field="ol.parts_desc"/></td>
                      <td class="text-right"><span t-field="ol.parts_qty"/></td>
                      <td class="text-right"><span t-field="ol.parts_cost"/></td>
                      <td class="text-right"><span t-field="ol.parts_hf_amount"/></td>
                      <td class="text-center"><span t-field="ol.parts_total"/></td>
                  </tr>
                  </t>
            </tr>
        </table> 
     </div>
	   <div class="footer">
              <table width="100%">
               <tr>
                   <td align="center"><strong>Prepared By</strong></td>
                   <td align="center"><strong>Conforme</strong></td>
                </tr>
                <tr>
                   <td><br/><br/></td>
                   <td><br/><br/></td>
                   <td><br/><br/></td>
                </tr>
                <tr>
                </tr>
                <tr>
                   <td align="center"><u><span t-field="o.prepared_by_id"/></u></td>
                   <td align="center"><u><span t-field="o.customer_id"/></u></td>
                </tr>
                <tr>
                   <td align="center"><span t-field="o.prepared_by_desig"/></td>
                   <td align="center"></td>
                </tr>
              </table>
     </div>
     </t>
    </t>
    </t>
   </template>
   <report id="one.repair_order_report"
     name="one.repair_order_template"
     file="one.repair_order_template"
     model="fos.repair.orders"
     report_type="qweb-html"
     string="Parts Online Order"
     menu="True"/>
</odoo>
