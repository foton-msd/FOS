<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="fos_report_payment_voucher" inherit_id="account.report_payment_receipt">
    <xpath expr="//div" position="replace">
                    <div class="page">
                        <h3><strong>Payment Receipt: <span t-field="o.name"/></strong></h3>
                        <div class="row mt64">
                            <div class="col-xs-6" t-if="o.payment_received_from">
                                <strong>Received From: </strong> <span t-field="o.payment_received_from"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6" t-if="o.partner_type">
                                <t t-if="o.partner_type == 'customer'">
                                    <strong>For the Account of: </strong>
                                </t>
                                <t t-if="o.partner_type == 'supplier'">
                                    <strong>For the Account of: </strong>
                                </t><span t-field="o.partner_id"/>
                            </div>
                            <div class="col-xs-6" t-if="o.payment_date">
                               <strong>Payment Date: </strong><span t-field="o.payment_date"/>
                           </div>
                        </div>   
                        <div class="row mb64">
                            <div class="col-xs-6" t-if="o.amount">
                                <strong>For the amount of: </strong><span t-field="o.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                             </div>
                            <div class="col-xs-6" t-if="o.payment_method_id">
                                <strong>Payment Method: </strong><span t-field="o.payment_method_id.name"/>
                            </div>
                            <div class="col-xs-6" t-if="o.journal_id">
                                <strong>Payment Journal: </strong><span t-field="o.journal_id"/>
                            </div>
                            <div class="col-xs-6" t-if="o.destination_journal_id">
                                <strong>Transfer to: </strong><span t-field="o.destination_journal_id"/>
                            </div>
                            <div class="col-xs-6" t-if="o.cheque_number">
                               <strong>Cheque Number: </strong><span t-field="o.cheque_number"/>
                           </div>
                            <div class="col-xs-6" t-if="o.communication">
                                <strong>Memo: </strong><span t-field="o.communication"/>
                            </div>
                        </div>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Invoice Date</th>
                                    <th>Invoice Number</th>
                                    <th class="text-right">Original Amount</th>
                                    <th class="text-right">Amount Paid</th>
                                    <th class="text-right">Balance</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.invoice_ids" t-as="inv">
                                    <td><span t-field="inv.date_invoice"/></td>
                                    <td><span t-field="inv.number"/></td>
                                    <td class="text-right"><span t-field="inv.amount_total"/></td>
                                    <td class="text-right"><span t-esc="inv.amount_total - inv.residual" t-options="{'widget': 'monetary', 'display_currency': inv.currency_id}"/></td>
                                    <td class="text-right"><span t-field="inv.residual"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
    </xpath>
    <xpath expr="//h3" position="replace">
      <h2 align="center">
        <t>
          <span t-if="o.partner_type in ['supplier']"><strong>CHECK VOUCHER:</strong></span>
          <span t-if="o.partner_type in ['customer']"><strong>PAYMENT RECEIPT:</strong></span>
          <span t-if="o.payment_type in ['transfer']"><strong>FUND TRANSFER:</strong></span>
         </t>
          <span t-field="o.name"/>
      </h2>
      
    </xpath>
    <xpath expr="//table" position="replace">

        <t t-if="o.partner_type == 'supplier'">
        <table class="table table-condensed">
          <thead>
            <tr>
              <th>Invoice Date</th>
              <th>Invoice Number</th>
              <th>Vendor Reference</th>
              <th>Description</th>
              <th class="text-right">Original Amount</th>
              <th class="text-right">Amount Paid</th>
              <th class="text-right">Balance</th>
            </tr>
          </thead>
          <tbody> 
            <t t-foreach="o.invoice_ids" t-as="inv">
                <t t-foreach="inv.invoice_line_ids" t-as="invs">               
                  <tr>
                    <td><span t-field="inv.date_invoice"/></td>
                    <td><span t-field="inv.number"/></td>
                    <td><span t-field="inv.reference"/></td>
                    <td><span t-field="invs.name"/></td>
                    <td class="text-right"><span t-field="invs.price_subtotal"/></td>
                    <td class="text-right"><span t-esc="inv.amount_total - inv.residual" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                    <td class="text-right"><span t-field="inv.residual"/></td>
                  </tr>
                </t>
            </t>
          </tbody>
        </table>
        </t>

        <t t-if="o.partner_type == 'customer'">        
        <table class="table table-condensed">
          <thead>
            <tr>
              <th>Invoice Date</th>
              <th>Invoice Number</th>
              <th class="text-right">Original Amount</th>
              <th class="text-right">Amount Paid</th>
              <th class="text-right">Balance</th>
            </tr>
          </thead>
          <tbody>
            <t t-foreach="o.invoice_ids" t-as="inv">
                <t t-foreach="inv.invoice_line_ids" t-as="invs">               
                  <tr>
                    <td><span t-field="inv.date_invoice"/></td>
                    <td><span t-field="inv.number"/></td>
                    <td class="text-right"><span t-field="invs.price_subtotal"/></td>
                    <td class="text-right"><span t-esc="inv.amount_total - inv.residual" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                    <td class="text-right"><span t-field="inv.residual"/></td>
                  </tr>
                </t>
            </t>
          </tbody>
        </table>
        </t>
        <p><strong>Notes:</strong></p>
        <p t-field="o.note" />
    </xpath>
    <xpath expr="//t/div" position="inside">
      <div class="footer">
        <table width="100%">
          <tr>
            <td><strong>Prepared By:</strong></td>
            <td><strong>Certified By:</strong></td>
            <td><strong>Approved By:</strong></td>
          </tr>
          <tr>
		   <td><br/><br/></td>
		   <td><br/><br/></td>
		   <td><br/><br/></td>
		      </tr>
          <tr>
            <td>________________________</td>
            <td>________________________</td>
            <td>________________________</td>
          </tr>
          <tr>
            <td></td>
          </tr>
      </table>
     </div>
   </xpath>
  </template>
</odoo>