<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <template id="fas_report_payment_voucher_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 align="center">
                            <t>
                            <span t-if="o.partner_type in ['customer']"><strong>CUSTOMER PAYMENT</strong></span>
                            <span t-if="o.partner_type in ['supplier']"><strong>PAYMENT VOUCHER</strong></span>
                            </t>
                        </h2>                    
                        <div class="row mt64">
                            <div class="col-xs-6" t-if="o.payment_date">
                                <strong>Payment Date: </strong> <span t-field="o.payment_date"/>
                            </div> 
                        </div>
                        <div class="row">
                            <div class="col-xs-6" t-if="o.partner_type">
                                <t t-if="o.partner_type == 'customer'">
                                    <strong>Customer: </strong>
                                </t>
                                <t t-if="o.partner_type == 'supplier'">
                                    <strong>Vendor: </strong>
                                </t><span t-field="o.partner_id"/>
                            </div>
                            <div class="col-xs-6" t-if="o.payment_method_id">
                                <strong>Payment Voucher No: </strong><span t-field="o.name"/>
                            </div>
                            <div class="col-xs-6" t-if="o.payment_method_id">
                                <strong>Payment Method: </strong><span t-field="o.payment_method_id.name"/>
                            </div>
                        </div>
                        <td><br/><br/></td>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th>Invoice Number</th>
                                    <th>Description</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><span t-field="o.journal_id"/></td>
                                    <td><span t-field="o.note"/></td>
                                    <td><span t-field="o.amount"/></td>
                                </tr>
                            </tbody>
                        </table>
                          <div class="footer">
	                        <table width="100%">
		                      <tr>
		                        <td>___________________</td>
		                        <td>___________________</td>
                                <td>___________________</td>
                                <td>___________________</td>
                              </tr>
		                      <tr>
		                        <td>Prepared By<br/></td>
                                <td>Certified By<br/></td>
		                        <td>Approved By<br/></td>
                                <td>Received By<br/></td>
                              </tr>
	                        </table>
	                      </div>  
                     </div>
                </t>
            </t>
        </t>
    </template>

   <report id="one.fas_report_payment_voucher"
     name="one.fas_report_payment_voucher_template"
     file="one.fas_report_payment_voucher_template"
     model="account.payment"
     report_type="qweb-html"
     string="Payment Voucher"
     menu="True"/>
</odoo>
