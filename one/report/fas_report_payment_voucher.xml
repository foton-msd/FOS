<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="fos_report_payment_voucher" inherit_id="account.report_payment_receipt">
    <xpath expr="//h3" position="replace">
      <h2 align="center">
        <t>
          <span t-if="o.partner_type not in ['customer']"><strong>CHECK VOUCHER:</strong></span>
          <span t-if="o.partner_type not in ['supplier']"><strong>PAYMENT RECEIPT:</strong></span>
         </t>
          <span t-field="o.name"/>
      </h2>
      
    </xpath>
    <xpath expr="//table" position="replace">

        <t t-if="o.partner_type == 'supplier'">
        <table class="table table-condensed">
          <thead>
            <tr>
              <th>Invoice Date</th>
              <th>Invoice Number</th>
              <th>Vendor Reference</th>
              <th>Description</th>
              <th class="text-right">Original Amount</th>
              <th class="text-right">Amount Paid</th>
              <th class="text-right">Balance</th>
            </tr>
          </thead>
          <tbody> 
            <t t-foreach="o.invoice_ids" t-as="inv">
                <t t-foreach="inv.invoice_line_ids" t-as="invs">               
                  <tr>
                    <td><span t-field="inv.date_invoice"/></td>
                    <td><span t-field="inv.number"/></td>
                    <td><span t-field="inv.reference"/></td>
                    <td><span t-field="invs.name"/></td>
                    <td class="text-right"><span t-field="invs.price_subtotal"/></td>
                    <td class="text-right"><span t-esc="inv.amount_total - inv.residual" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                    <td class="text-right"><span t-field="inv.residual"/></td>
                  </tr>
                </t>
            </t>
          </tbody>
        </table>
        </t>

        <t t-if="o.partner_type == 'customer'">        
        <table class="table table-condensed">
          <thead>
            <tr>
              <th>Invoice Date</th>
              <th>Invoice Number</th>
              <th class="text-right">Original Amount</th>
              <th class="text-right">Amount Paid</th>
              <th class="text-right">Balance</th>
            </tr>
          </thead>
          <tbody>
            <tr>
             <t t-foreach="o.invoice_ids" t-as="inv">
              <td><span t-field="inv.date_invoice"/></td>
              <td><span t-field="inv.number"/></td>
              <td class="text-right"><span t-field="inv.amount_total"/></td>
              <td class="text-right"><span t-esc="inv.amount_total - inv.residual" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
              <td class="text-right"><span t-field="inv.residual"/></td>
             </t>
            </tr>
          </tbody>
        </table>
        </t>
    </xpath>
    <xpath expr="//t/div" position="inside">
      <div class="footer">
        <table width="100%">
          <tr>
            <td><strong>Prepared By:</strong></td>
            <td><strong>Certified By:</strong></td>
            <td><strong>Approved By:</strong></td>
          </tr>
          <tr>
		   <td><br/><br/></td>
		   <td><br/><br/></td>
		   <td><br/><br/></td>
		      </tr>
          <tr>
            <td>________________________</td>
            <td>________________________</td>
            <td>________________________</td>
          </tr>
          <tr>
            <td></td>
          </tr>
      </table>
     </div>
   </xpath>
  </template>
</odoo>