<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
	<record id="view_fos_vqir_report_1_search" model="ir.ui.view">
		<field name="name">view.fos.vqir.report.1.search</field>
		<field name="model">view.fos.vqir.report.1</field>
		<field name="arch" type="xml">
			<search string="VQIR Report">
				
				<field name="vqir_date" groups="base.group_no_one"/>
				<filter string="This Year" name="by_year" 
                    domain="[('vqir_date','&lt;=', time.strftime('%%Y-12-31')),('vqir_date','&gt;=',time.strftime('%%Y-01-01'))]"/>
 				<group expand="1" string="Group by">
                    <filter string="Dealer" name="by_dealer" domain="[]" context="{'group_by':'dealer_id'}"/>
                    <filter string="State" name="by_state" domain="[]" context="{'group_by':'vqir_state'}"/>
                    <filter string="FOTON Number" name="by_fu" domain="[]" context="{'group_by':'fos_fu_id'}"/>
                    <filter string="Date" name="by_date" domain="[]" context="{'group_by':'vqir_date'}"/>
                </group>
				
			</search>
		</field>		
	</record>
	
	<record model="ir.ui.view" id="view_fos_vqir_report_1_tree">
		<field name="name">view.fos.vqir.report.1.tree</field>
		<field name="model">view.fos.vqir.report.1</field>
		<field eval="8" name="priority"/>
		<field name="arch" type="xml">
			<tree string="VQIR Analysis" create="false" edit="false" delete="false">
				<field name="name"/>
				<field name="vqir_date"/>
				<field name="ack_date"/>
				<field name="approved_date"/>
				<field name="dealer_id"/>
				<field name="fos_fu_id"/>
        		<field name="fu_chassis_number"/>
        		<field name="fu_engine_number"/>
        		<field name="users_name"/>
        		<field name="users_mobile"/>
        		<field name="km_1st_trouble"/>
        		<field name="run_km"/>
        		<field name="date_occur"/>
        		<field name="trouble_cause_analysis"/>
        		<field name="disposal_measures"/>
        		<field name="parts_number"/>
        		<field name="parts_desc"/>
        		<field name="parts_qty"/>
        		<field name="parts_cost"/>
        		<field name="parts_hf_amount"/>
        		<field name="parts_total"/>
        		<field name="approved_amount"/>
        		<field name="job_code"/>
	    		<field name="job_code_desc"/>
        		<field name="job_qty"/>        		
				<field name="job_cost"/>
        		<field name="job_total"/>
				<field name="job_approved_amount"/>
	       		<field name="job_parts_total"/>
				<field name="pj_approved_amount"/>
        		<field name="vqir_state"/>
 			</tree>
		</field>
	</record> 
	
	<record id="view_fos_vqir_report_1_pivot" model="ir.ui.view">
        <field name="name">view.fos.vqir.report.1.pivot</field>
        <field name="model">view.fos.vqir.report.1</field>
        <field name="arch" type="xml">
            <pivot string="VQIR Analysis" disable_linking="True">
                <field name="dealer_id" type="row"/>
                <field name="vqir_state" type="count"/>
				<field name="parts_total" type="measure"/>
				<field name="job_total" type="measure"/>
				<field name="job_parts_total" type="measure"/>
            </pivot>
        </field>
    </record>
	
    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="view_fos_vqir_report_1_action_window">
      	<field name="name">VQIR Report - 1</field>
      	<field name="res_model">view.fos.vqir.report.1</field>
		<field name="type">ir.actions.act_window</field>
      	<field name="view_mode">pivot,graph,tree</field>
		<field name="view_type">form</field>
		<field name="search_view_id" ref="view_fos_vqir_report_1_search"/>
		<field name="context">{'search_default_by_year': 1, 'search_default_by_dealer': 1, 'search_default_by_state': 1}</field>
    </record>

    <menuitem name="Reporting" id="menu_warranty_reports" 
        parent="menu_top_service" 
        sequence="3"/>
	<menuitem name="VQIR Report - 1" id="menu_fos_vqir_report_1" 
        parent="menu_warranty_reports" 
	    action="view_fos_vqir_report_1_action_window"/>
</odoo>