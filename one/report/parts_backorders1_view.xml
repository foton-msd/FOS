    <record model="ir.actions.act_window" id="view_parts_backorders1_action_window">
        <field name="name">Parts Backorders Report - 1</field>
        <field name="res_model">view.parts.backorders1</field>
        <field name="view_mode">pivot,graph,tree</field>
        <field name="view_type">form</field>
        <field name="search_view_id" ref="view_parts_backorders1_search"/>
