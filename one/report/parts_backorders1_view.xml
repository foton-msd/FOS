<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_parts_backorders1_search" model="ir.ui.view">
        <field name="name">view.parts.backorders1.search</field>
        <field name="model">view.parts.backorders1</field>
        <field name="arch" type="xml">
            <search string="Search Parts Backorders">
                <field name="partner_id"/>
                <filter string="This Year" name="year" invisible="1" domain="[('date_order','&lt;=', time.strftime('%%Y-12-31')),('date_order','&gt;=',time.strftime('%%Y-01-01'))]"/>
                <group expand="1" string="Group by">
                    <filter string="Customer" name="by_customer" context="{'group_by':'partner_id'}"/>
                    <filter string="Order Number" name="by_order" context="{'group_by':'order_id'}"/>
                    <filter string="Order Date" name="by_order_date" context="{'group_by':'date_order'}"/>
                </group>
			</search>
		</field>		
	</record>

    <record model="ir.ui.view" id="view_parts_backorders1_tree">
		<field name="name">view.parts.backorders1.tree</field>
		<field name="model">view.parts.backorders1</field>
		<field name="arch" type="xml">
            <tree string="Parts Backorders Report - 1" create="false">
                <field name="partner_id"/>
                <field name="order_id"/>
                <field name="source_code"/>
                <field name="product_id"/>
                <field name="order_qty"/>
                <field name="qty_delivered"/>
                <field name="backorder"/>
            </tree>
        </field>
    </record>
