<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="one.report_so_parts_template">
   <t t-call="web.html_container">
   <t t-foreach="docs" t-as="doc">
    <t t-call="web.external_layout">
        <div class="page">
            <div class="oe_structure"/>
            <div class="row">
                <div class="col-xs-6">
                </div>
            </div>
            <h2 align="center">
        <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
          <span t-if="doc.state not in ['draft','sent']">Parts Sales Order # </span>
          <span t-if="doc.state in ['draft','sent']">Parts Sales Quotation # </span>
        </t>
               <t t-if="env.context.get('proforma', False) or is_pro_forma">
                 <span>Pro-Forma Invoice # </span>
               </t>
                 <span t-field="doc.name"/>
            </h2>
            <table class="table">
              <tbody>
               <tr/>
               <tr>
                 <td width="10%"><strong>Charged to:</strong></td>
                 <td width="90%">
                 <t t-esc="doc.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                 <t t-esc="doc.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="doc.partner_id.vat"/>
                 </td>
               </tr>
              </tbody>
            </table>
            <div class="row mt32 mb32" id="informations">
                <div t-if="doc.client_order_ref" class="col-xs-3">
                    <strong>Your Reference:</strong>
                    <p t-field="doc.client_order_ref"/>
                </div>
                <div t-if="doc.confirmation_date and doc.state not in ['draft','sent']" class="col-xs-3">
                    <strong>Date Ordered:</strong>
                    <p t-field="doc.confirmation_date"/>
                </div>
                <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-xs-3">
                    <strong>Quotation Date:</strong>
                    <p t-field="doc.date_order"/>
                </div>
                <div t-if="doc.user_id.name" class="col-xs-3">
                    <strong>Salesperson:</strong>
                    <p t-field="doc.user_id"/>
                </div>
                <div name="payment_term" t-if="doc.payment_term_id" class="col-xs-3">
                    <strong>Payment Terms:</strong>
                    <p t-field="doc.payment_term_id"/>
                </div>
                <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-xs-3">
                    <strong>Expiration Date:</strong>
                    <p t-field="doc.validity_date"/>
                </div>
            </div>

            <!-- Is there a discount on at least one line? -->
            <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>

            <t t-foreach="doc.order_lines_layouted()" t-as="page">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th class="text-right">Quantity</th>
                            <th class="text-right">Unit Price</th>
                            <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">Disc.(%)</th>
                            <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">Disc. Amount</th>
                            <th class="text-right price_tax_included" groups="sale.group_show_price_total">Total Price</th>
                        </tr>
                   </thead>
                   <tbody class="sale_tbody">
                        <t t-foreach="page" t-as="layout_category">

                            <t t-if="layout_category_size > 1 or page_size > 1" groups="sale.group_sale_layout">
                                <tr class="active">
                                    <td colspan="7" style="font-weight: bold; border-bottom: 1px solid black;">&amp;bull;
                                        <t t-esc="layout_category['name']"/>
                                    </td>
                                </tr>
                            </t>

                            <!-- Lines associated -->
                            <t t-foreach="layout_category['lines']" t-as="l">
                                <tr>
                                    <td><span t-field="l.name"/></td>
                                    <td class="text-right">
                                        <span t-field="l.product_uom_qty"/>
                                        <span t-field="l.product_uom" groups="product.group_uom"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="l.price_unit"/>
                                    </td>
                                    <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                        <span t-field="l.discount"/>
                                    </td>
                                    <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                        <span t-field="l.discount_amount"/>
                                    </td>
                                    <td class="text-right" groups="sale.group_show_price_total">
                                        <span t-field="l.price_total"
                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>
            </t>
            <p><strong>Remarks</strong></p>
            <p t-field="doc.note" />
            <p t-if="doc.payment_term_id.note">
                <span t-field="doc.payment_term_id.note"/>
            </p>
            <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and doc.fiscal_position_id.note">
                <strong>Fiscal Position Remark:</strong>
                <span t-field="doc.fiscal_position_id.note"/>
            </p>
            <div class="oe_structure"/>
        </div>
        <div class="footer">
              <table width="100%">
               <tr>
                   <td align="center"><strong>Prepared By</strong></td>
                   <td align="center"><strong>Checked By</strong></td>
                   <td align="center"><strong>Approved By</strong></td>
                   <td align="center"><strong>Conforme</strong></td>
                </tr>
                <tr>
                   <td><br/><br/></td>
                   <td><br/><br/></td>
                   <td><br/><br/></td>
                </tr>
                <tr>
                </tr>
                <tr>
                   <td align="center"><u><span t-field="doc.prepared_by_id"/></u></td>
                   <td align="center"><u><span t-field="doc.checked_by"/></u></td>
                   <td align="center"><u><span t-field="doc.approved_by"/></u></td>
                   <td align="center"><u>______________</u></td>
                </tr>
                <tr>
                   <td align="center"><span t-field="doc.prepared_by_desig"/></td>
                   <td align="center"><span t-field="doc.checked_by_desig"/></td>
                   <td align="center"><span t-field="doc.approved_by_desig"/></td>
                   <td align="center"></td>
                </tr>
              </table>
        </div>
    </t>
   </t>
  </t>  
</template>
<report 
    id="one.report_so_parts"
    string="Parts Sale Order"
    model="sale.order" 
    report_type="qweb-html"
    file="one.report_so_parts_template"
    name="one.report_so_parts_template"
    print_report_name="(object.name)"
    menu="False"
        />
</data>     
</odoo>
