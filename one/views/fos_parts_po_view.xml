<odoo>
    <data>
        <record model="ir.ui.view" id="fos_parts_po_tree">
            <field name="name">Online Parts Purchase Order</field>
            <field name="model">fos.parts.po</field>
            <field name="arch" type="xml">
                <tree string="Online Parts Purchase Order">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="order_total"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="fos_parts_po_form">
            <field name="name">Online Parts Purchase Order</field>
            <field name="model">fos.parts.po</field>
            <field name="arch" type="xml">
                <form string="Purchase Order">
                    <header>
                        <button name="action_send" states="draft" type="object"
                            string="Send to FMPI" class="oe_highlight"
                            confirm="Are all entries correct?"/>
                        <button name="action_cancel" states="draft,proc,forpo" type="object"
                            string="Cancel"
                            confirm="Are you sure to cancell this order?"/>
                        <button name="action_confirm" states="forpo" type="object"
                            string="Send Purchase Confirmation to FMPI" class="oe_highlight"
                            confirm="Are all entries correct?"/>
                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <group>
                                <group>
                                    <h1><field name="name" readonly="1"/></h1>
                                    <h2><field name="purchase_order_id"/></h2>
                                </group>
                                <group>
                                    <h1><field name="date" readonly="1"/></h1>
                                </group>
                            </group>
                        </div>
                        <group string="Order Lines">
                            <field name="order_line" nolabel="1" 
                                attrs="{'readonly': [('state', 'not in', ('draft'))]}">>
                                <tree editable="bottom">
                                    <field name="fu_id"
                                        options="{'no_create': True, 'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                    <field name="sub_type" invisible="1"/>
                                    <field name="fmpi_product" invisible="1"/>
                                    <field name="product_id" domain="[('sub_type','=','parts'),('fmpi_product','=',True)]"
                                        options="{'no_create': True, 'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                                    <field name="description"/>
                                    <field name="order_qty"/>
                                    <field name="price_unit"/>
                                    <field name="vat_amount"/>
                                    <field name="subtotal"/>
                                    <field name="subtotal_with_vat"/>
                            <!--    <field name="assigned_product_id" attrs="{'bg_color': 'red', 'column_invisible': [('parent.state','in', ['draft','sent','cancel'])]}"/> -->
                                    <field name="assigned_product_name" attrs="{'bg_color': 'red: assigned_product_id != product_id', 'column_invisible': [('parent.state','in', ['draft','sent','cancel'])]}"/>
                                    <field name="assigned_description" attrs="{'column_invisible': [('parent.state','in', ['draft','sent','cancel'])]}"/>
                            <!--    <field name="assigned_order_qty" attrs="{'column_invisible': [('parent.state','in', ['draft','sent','cancel'])]}"/> -->
                                    <field name="assigned_price_unit" attrs="{'column_invisible': [('parent.state','in', ['draft','sent','cancel'])]}"/>
                                    <field name="assigned_subtotal" attrs="{'column_invisible': [('parent.state','in', ['draft','sent','cancel'])]}"/>
                                    <field name="assigned_vat_amount" attrs="{'column_invisible': [('parent.state','in', ['draft','sent','cancel'])]}"/>
                                    <field name="assigned_subtotal_with_vat" attrs="{'column_invisible': [('parent.state','in', ['draft','sent','cancel'])]}"/>
                                    <field name="eta" widget="date" attrs="{'column_invisible': [('parent.state','in', ['draft','sent','cancel'])]}"/>
                                </tree>
                            </field>
                        </group>
                        <group class="oe_subtotal_footer oe_right"> 
                            <div class="oe_inline">
                                <label for="order_total"/>
                            </div>
                            <field name="order_total" widget="monetary" nolabel="1"/>
                            <div class="oe_inline">
                                <label for="assigned_order_total" attrs="{'invisible': [('state','in', ['draft','sent','cancel'])]}"/>
                            </div>
                            <field name="assigned_order_total" attrs="{'invisible': [('state','in', ['draft','sent','cancel'])]}" widget="monetary" nolabel="1"/>
                            <div class="oe_inline">
                                <label for="order_total_with_vat"/>
                            </div>
                            <field name="order_total_with_vat" widget="monetary" nolabel="1"/>
                            <div class="oe_inline">
                                <label for="assigned_order_total_with_vat" attrs="{'invisible': [('state','in', ['draft','sent','cancel'])]}"/>
                            </div>
                            <field name="assigned_order_total_with_vat" attrs="{'invisible': [('state','in', ['draft','sent','cancel'])]}" widget="monetary" nolabel="1"/>
                        </group>   
                        
                        <field name="notes" class="oe_inline" 
                            attrs="{'readonly':[('state','!=','draft')]}"
                            placeholder="Define your terms and conditions ..."/>
                        <div class="oe_clear"/>
                    </sheet>   
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>                  
                </form>  
            </field>
        </record>
    
        <record id="view_fos_parts_po_filter" model="ir.ui.view">
            <field name="name">fos.parts.po.select</field>
            <field name="model">fos.parts.po</field>
            <field name="arch" type="xml">
                <search string="Search Onlie Parts Order">
                    <filter string="Order Number" domain="[('name','ilike',self)]"/>
                    <separator/>
                    <filter string="Today's Activities" name="orders_today"
                        domain="[('date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00'))]"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Sent to FMPI" name="sent" domain="[('state', '=', 'sent')]"/>
                    <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancel')]"/>
                    <filter string="Acknowledged" name="ack" domain="[('state', '=', 'ack')]"/>
                    <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Order Month" domain="[]" context="{'group_by':'date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.sequence" id="fos_parts_po_seq">
            <field name="name">Online Parts P.O. Sequence Number</field>
            <field name="code">fos.parts.po.seq</field>
            <field name="prefix">POLO#</field>
            <field name="padding">6</field>
        </record>

        <record model="ir.actions.act_window" id="act_window_view_fos_parts_po">
            <field name="name">Online Parts Purchase Order</field>
            <field name="res_model">fos.parts.po</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="fos_parts_po_tree"/>
            <field name="context">{'search_default_orders_today': 1}</field>
        </record>

        <menuitem name="Online Orders to FMPI" 
            id="fos_online_po_menu_item" sequence="500"
            parent="purchase.menu_procurement_management"/>
        <menuitem name="Parts" 
            id="fos_parts_po_menu_item" 
            parent="fos_online_po_menu_item"
            action="act_window_view_fos_parts_po" />

    <!-- res.company -->
    <record model="ir.ui.view" id="fas_company_form2">
      <field name="name">FMPI Email Receipients (Parts)</field>
      <field name="model">res.company</field>
      <field name="inherit_id" ref="base.view_company_form"/>
      <field name="arch" type="xml">
        <xpath expr="//form/sheet/notebook" position="inside">
          <page string="Email Receipients" groups="one.msd_administrators">
            <group string="Online Parts Order Email Receipients">
                <field name="parts_po_email_receipient_ids" nolabel="1">
                    <tree editable="bottom">
                        <field name="name"/>
                        <field name="fullname"/>
                    </tree>
                </field>
            </group>
          </page>
        </xpath>
      </field>
    </record>
    </data>
</odoo>