<odoo>
  <data>
    <record model="ir.ui.view" id="fos_stock_picking_form">
      <field name="name">fos.stock.picking.form</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>
      <field name="arch" type="xml">
        <xpath expr="//button[@name='action_cancel']" position="attributes">
          <attribute name="groups">one.group_inventory_cancel</attribute>
        </xpath>
        <xpath expr="//form/sheet/notebook/page[2]/field[@name='move_lines']/tree/field[@name='product_id']" position="after">
          <field name="description" attrs="{'invisible': [('description','=',False)]}"/>
        </xpath>
        <xpath expr="//form/sheet/notebook/page[2]/field[@name='move_lines']/tree/button[@name='action_show_details']" position="attributes">                    
          <attribute name="attrs">{'invisible': ['|', ('show_details_visible', '=', False),('picking_code','!=','outgoing')]}</attribute>
        </xpath> 
      </field>
    </record>
  </data>
</odoo>
