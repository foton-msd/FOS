<odoo>
    <data>
        <record model="ir.ui.view" id="view_nonf_units_list">
            <field name="name">Non-FOTON Units List</field>
            <field name="model">nonf.units</field>
            <field name="arch" type="xml">
                <tree delete="false">
                    <field name="name"/>
                    <field name="conduction_sticker"/>
                    <field name="maker_id"/>
                    <field name="model_id"/>
                    <field name="engine_number"/>
                    <field name="chassis_number"/>
                    <field name="color"/>
                    <field name="owner_name"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_nonf_units_form">
            <field name="name">Non-FOTON Unit</field>
            <field name="model">nonf.units</field>
            <field name="arch" type="xml">
                <form delete="false">
                    <sheet>
                        <group string="Unit Info">
                            <field name="maker_id" 
                                options="{'no_create': True, 'no_quick_create': True, 'no_create_edit': True, 'no_open': True, 'always_reload': True}"/>
                            <field name="model_id"
                                options="{'no_create': True, 'no_quick_create': True, 'no_create_edit': True, 'no_open': True, 'always_reload': True}"/>
                            <field name="engine_number"/>
                            <field name="chassis_number"/>
                            <field name="color"/>
                            <field name="name"/>
                            <field name="conduction_sticker"/>
                        </group>
                        <group string="Owner Info">
                            <field name="owner_name"/>
                            <field name="owner_address"/>
                            <field name="owner_contact_details"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_nonf_units_search">
            <field name="name">Search Non-FOTON Units</field>
            <field name="model">nonf.units</field>
            <field name="arch" type="xml">
                <search string="Non-FOTON Units">
                    <field name="name"/>
                    <field name="conduction_sticker"/>
                    <field name="maker_id"/>
                    <field name="model_id"/>
                    <field name="owner_name"/>
                    <filter name="group_maker" string="Make" icon="terp-partner" context="{'group_by':'maker_id'}"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_window_nonf_units">
        <field name="name">Non-FOTON Units</field>
        <field name="res_model">nonf.units</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_nonf_units_list"/>
        <field name="context">{'search_default_group_maker': 1}</field>
    </record>

    <menuitem id="fos_service_nonf_units_menu" 
        name="Non-FOTON Units" 
        action="act_window_nonf_units" 
        parent="fos_service_nonf_maintenance_menu" 
        sequence="1"/>
    </data>
</odoo>