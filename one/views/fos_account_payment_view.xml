<odoo>
  <data>
    <record id="view_account_payment_form" model="ir.ui.view">
      <field name="name">fos.account.payment.form</field>
      <field name="model">account.payment</field>
      <field name="inherit_id" ref="account.view_account_payment_form"/>
      <field name="arch" type="xml">
        <xpath expr="//group/group[2]/field[@name='communication']" position="after">
          <field name="cheque_number" attrs="{'readonly': [('state', '!=', 'draft')]}"/>   
        </xpath>      
        <xpath expr="//group" position="after">
        <group>
          <field name="note" class="oe_inline" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
        </group>  
        </xpath>
        <xpath expr="//group/group/field[@name='partner_id']" position="after">
          <field name="payment_received_from" attrs="{'readonly': [('state', '!=', 'draft')], 'invisible': [('payment_type','=','transfer')]}"/>
        </xpath>
      </field>
    </record>
    <record id="fos_view_account_payment_invoice_form" model="ir.ui.view">
      <field name="name">fos.account.payment.invoice.form</field>
      <field name="model">account.payment</field>
      <field name="inherit_id" ref="account.view_account_payment_invoice_form"/>
      <field name="arch" type="xml">
       <xpath expr="//group/group[2]/field[@name='communication']" position="after">
          <field name="cheque_number"/>   
       </xpath>      
       <xpath expr="//group/group[2]" position="after">
        <group>
          <field name="note"/>
        </group>
       </xpath>
      </field>
    </record>  
    <record id="fos_view_account_register_payments_form" model="ir.ui.view">
      <field name="name">fos.account.register.payments.form</field>
      <field name="model">account.register.payments</field>
      <field name="inherit_id" ref="account.view_account_payment_from_invoices"/>
      <field name="arch" type="xml">
       <xpath expr="//group/group[2]/field[@name='communication']" position="after">
          <field name="cheque_number"/>   
       </xpath>
       <xpath expr="//group/group[2]" position="after">
        <group>
          <field name="note"/>
        </group>
       </xpath>
      </field>
    </record>  
  </data>
</odoo>
