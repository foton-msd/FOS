<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Top level menu -->
    <menuitem id="fos_sales_units_root_menu"
        name="Sales - Units"
        web_icon="sale,static/description/icon.png"
        sequence="9"/>
    <!-- Sub-menu item's parent -->
    <menuitem id="fos_sales_units_quotations_orders_menu"
        name="Quotations &amp; Orders"
        parent="fos_sales_units_root_menu"
        sequence="1"/>
    <!-- Sales Quotations, Menu and Actions -->
    <record id="fos_sales_units_quotation_act_window" model="ir.actions.act_window">
        <field name="name">Sales Quotation - Units</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('so_type','=','units'),('state','in',('sent','draft'))]</field>
        <field name="context">{'default_so_type': 'units'}</field>
    </record>    
    <menuitem id="od_units_sale_quotation_menu"
        name="Sales Quotation"
        action="fos_sales_units_quotation_act_window"
        parent="fos_sales_units_quotations_orders_menu"
        sequence="1"/>
    <!-- End-of-Sales Quotations, Menu and Actions -->
   
    <!-- Sales Orders, Menu and Actions -->
    <record id="fos_sales_units_order_act_window" model="ir.actions.act_window">
        <field name="name">Sales Order - Units</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>        
        <field name="domain">[('so_type','=','units'),('state', 'not in', ('draft', 'sent', 'cancel'))]</field>
        <field name="context">{'default_so_type': 'units'}</field>
    </record>   
    <menuitem id="fos_sales_units_order_menu"
        name="Sales Order"
        action="fos_sales_units_order_act_window"
        parent="fos_sales_units_quotations_orders_menu"
        sequence="2"/>
    <!-- End-of-Sales Orders, Menu and Actions -->
</odoo>