<odoo>
  <data>
    <record model="ir.ui.view" id="fas_product_foton_page_variants_form">
      <field name="name">fas.product.foton.page.variants.form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//page[@name='variants']/field[@name='attribute_line_ids']/tree/field[@name='attribute_id']" position="attributes">
          <attribute name="options">{'no_create': True, 'no_quick_create': True, 'no_create_edit': True, 'no_open': True}</attribute>
        </xpath>
        <xpath expr="//page[@name='variants']/field[@name='attribute_line_ids']/tree/field[@name='value_ids']" position="attributes">
          <attribute name="options">{'no_create': True, 'no_quick_create': True, 'no_create_edit': True, 'no_open': True}</attribute>
        </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="fas_product_foton_page_form">
      <field name="name">fas.product.foton.page.foton.form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='type']" position="after">          
          <field name="sub_type"/>
          <field name="unit_class"/>
        </xpath>
        <xpath expr="//field[@name='uom_id']" position="before">
          <field name="is_fmpi" invisible='1'/>
          <hr attrs="{'invisible': [('sub_type','!=','parts')]}"/>
          <field name="model" attrs="{'invisible': [('sub_type','!=','parts')]}"/>
          <field name="model_code" attrs="{'invisible': [('sub_type','!=','parts')]}"/>
          <field name="inner_code" attrs="{'invisible': [('sub_type','!=','parts')]}"/>
          <field name="segment" attrs="{'invisible': [('sub_type','!=','parts')]}"/>
          <hr attrs="{'invisible': [('sub_type','!=','parts'),('is_fmpi','=',False)]}"/>
          <field name="dnp" attrs="{'invisible': ['|', ('sub_type','!=','parts'),('is_fmpi','=',False)]}"/>
          <field name="isc" attrs="{'invisible': ['|', ('sub_type','!=','parts'),('is_fmpi','=',False)]}"/>
          <field name="fob_php" attrs="{'invisible': ['|', ('sub_type','!=','parts'),('is_fmpi','=',False)]}"/>
          <field name="fob_usd" attrs="{'invisible': ['|', ('sub_type','!=','parts'),('is_fmpi','=',False)]}"/>
          <field name="fob_rmb" attrs="{'invisible': ['|', ('sub_type','!=','parts'),('is_fmpi','=',False)]}"/>
        </xpath>
      </field>
    </record>

    <record id="fas_product_search_view" model="ir.ui.view">
      <field name="name">fas.product.search.view</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_search_view"/>
      <field name="arch" type="xml">
        <search string="Product">
          <field name="sub_type" string="Parts" domain="[('sub_type','=','parts')]"/>
          <field name="sub_type" string="Units" domain="[('sub_type','=','units')]"/>
          <filter string="Sub-type" name="group_sub_type" context="{'group_by':'sub_type'}"/>
          <field name="description" string="Description"/>
        </search>
      </field>

    </record>
      <record id="fos_product_template_tree" model="ir.ui.view">
      <field name="name">fos.product.template.tree</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_tree_view"/>
      <field name="arch" type="xml">
        <xpath expr="//tree/field[@name='categ_id']" position="replace"/>
        <xpath expr="//tree/field[@name='name']" position="after">
          <field name="description"/>
        </xpath>
        <xpath expr="//tree/field[@name='default_code']" position="before">
          <field name="categ_id"/>
        </xpath>
      </field>
     </record>

    <record id="fas_product_product_tree" model="ir.ui.view">
      <field name="name">fas.product.product.tree</field>
      <field name="model">product.product</field>
      <field name="inherit_id" ref="product.product_product_tree_view"/>
      <field name="arch" type="xml">
        <xpath expr="//tree/field[@name='name']" position="after">
          <field name="description"/>
        </xpath>
        <xpath expr="//tree/field[@name='default_code']" position="before">
          <field name="categ_id"/>
        </xpath>
      </field>
     </record>
  </data>

</odoo>
