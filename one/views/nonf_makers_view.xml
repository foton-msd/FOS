<odoo>
    <data>
        <record model="ir.ui.view" id="view_nonf_makers_list">
            <field name="name">Makers List</field>
            <field name="model">nonf.makers</field>
            <field name="arch" type="xml">
                <tree delete="false">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_nonf_makers_form">
            <field name="name">Maker</field>
            <field name="model">nonf.makers</field>
            <field name="arch" type="xml">
                <form delete="false">
                    <sheet>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name" string="Maker"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <field name="model_ids" nolabel="1">
                                <tree editable="bottom" string="Models">
                                    <field name="name"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <div class="oe_title">
                                            <label class="oe_edit_only" for="name" string="Maker"/>
                                            <h1><field name="name"/></h1>
                                        </div>
                                    </sheet>
                                </form>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_nonf_makers_search">
            <field name="name">Search Makers</field>
            <field name="model">nonf.makers</field>
            <field name="arch" type="xml">
                <search string="FOTON Units">
                    <field name="name"/>                    
                    <filter name="group_name" string="Maker" icon="terp-partner" context="{'group_by':'name'}"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_window_nonf_makers">
            <field name="name">Makers &amp; Models</field>
            <field name="res_model">nonf.makers</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_nonf_makers_list"/>
            <field name="context">{'search_default_group_name': 0}</field>
        </record>

    <menuitem id="fos_service_nonf_makers_menu" 
        name="Makers &amp; Models" 
        action="act_window_nonf_makers" 
        parent="fos_service_nonf_maintenance_menu" 
        sequence="2"/>
    </data>
</odoo>