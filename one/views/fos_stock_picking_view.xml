<odoo>
  <data>
    <record model="ir.ui.view" id="fos_stock_picking_form">
      <field name="name">fos.stock.picking.form</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>
      <field name="arch" type="xml">
        <xpath expr="//button[@name='action_cancel']" position="attributes">
          <attribute name="groups">one.group_inventory_cancel</attribute>
        </xpath>
        <xpath expr="//form/sheet/notebook/page[2]/field[@name='move_lines']/tree/button[@name='action_show_details']" position="replace">
        <field name="picking_type_id" invisible="1"/>
          <button name="action_show_details" string="Register lots, packs, location" 
            type="object" icon="fa-list" attrs="{'invisible': ['|', ('show_details_visible', '=', False),('picking_type_id.code','=','outgoing')]}" 
            options='{"warn": true}'/>
        </xpath> 
      </field>
    </record>
  </data>
</odoo>
