<?xml version="1.0"?>
<odoo>
    <data>
        <record id="fos_view_picking_form" model="ir.ui.view">
            <field name="name">fos.stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[2]/field[@name='move_lines']/tree/field[@name='product_id']" position="after">
                    <field name="description" attrs="{'invisible': [('description','=',False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>