<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="fos_purchase_order_line_import_form">
        <field name="name">Importing Purchase Order Lines...</field>
        <field name="model">purchase.order.line.import</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                
                <field name="validated" invisible="1"/>
                <group>
                    <span>Where is your MS Excel (XLSX) file?</span>
                </group>
                <group>
                    <field name="xlsfile" widget="file" filename="filename" required="1"/>
                </group> 
                <group attrs="{'invisible': [('xlsfile','=',False)]}">
                    <group string="Import Rows">
                        <field name="begin_at"/>
                        <field name="end_at"/>
                    </group>
                    <group string="Import Columns">
                        <field name="sc_col"/>
                        <field name="pn_col"/>
                        <field name="desc_col"/>
                        <field name="qty_col"/>
                        <!--<field name="loc_col"/>-->
                        <field name="order_id" readonly="1"/>
                    </group>
                </group>
                <group string="Import Lines" attrs="{'invisible': ['|',('xlsfile','=',False),('validated','=',False)]}">
                    <field name="line_ids" nolabel="1">
                        <tree create="false">
                            <field name="product_id"/>
                            <field name="sc"/>
                            <field name="part_number"/>
                            <field name="description"/>
                            <field name="qty"/>
                            <field name="order_line_id" invisible="0"/>
                        </tree>
                        <form>
                            <group>
                                <group string="Excel Details">
                                    <field name="sc"/>
                                    <field name="part_number"/>
                                    <field name="description"/>
                                    <field name="qty"/>
                                    <field name="note"/>
                                </group>
                                <group string="FOS Details">
                                    <field name="poli_id"/>
                                    <field name="product_id"/>
                                </group>
                            </group>
                        </form>
                    </field>
                </group>
                <footer> 
                    <button string="Cancel" special="cancel"/>
                    <button string="Validate" class="btn-warning oe_editonly" attrs="{'invisible': ['|',('xlsfile','=',False),('validated','=',True)]}"
                        type="object" name="validate_xls"/>
                    <button name="beg_import" string="Begin Import Process" type="object" class="btn-success oe_editonly" 
                      attrs="{'invisible': [('validated','=',False)]}" forcesave="1"
                      confirm="Uploading P.O. Lines may tike a while. Please be patient."/>                 
                </footer>
            
            </form>
        </field>
    </record>
</odoo>