<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="fos_payment_modes_list">
      <field name="name">Payment Mode</field>
      <field name="model">fos.payment.modes</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- explicit form view definition -->
    <record model="ir.ui.view" id="fos_payment_modes_form">
      <field name="name">Payment Mode</field>
      <field name="model">fos.payment.modes</field>
      <field name="arch" type="xml">
        <form>
          <field name="name"/>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="fos_payment_modes_search">
      <field name="name">Search Payment Mode</field>
      <field name="model">fos.payment.modes</field>
      <field name="arch" type="xml">
        <search string="Payment Mode">
          <field name="name"/>
        </search>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="fos_payment_modes_action_window">
      <field name="name">Payment Mode</field>
      <field name="res_model">fos.payment.modes</field>
      <field name="view_mode">tree,form</field>
    </record>
        
    <menuitem name="Payment Mode" id="fos_payment_modes_menu"
	    parent="fos_sales_units_config" action="fos_payment_modes_action_window"
	    sequence="1" groups="one.msd_administrators"/>
  </data>
</odoo>
