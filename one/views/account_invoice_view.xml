<odoo>
    <data>
        <!-- removed filter from customer invoice' account_id selection -->
        <record id="fos_view_account_invoice_form1" model="ir.ui.view">
            <field name="name">fos.view.account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="priority" eval="100"/>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='other_info']/group/group/field[@name='account_id']" position="attributes">
                    <attribute name="domain">[('company_id', '=', company_id),('deprecated', '=', False)]</attribute>
                </xpath>
                <xpath expr="//page/field/tree/field[@name='account_id']" position="replace">
                    <field name="account_id" groups="account.group_account_user"
                        domain="[('company_id', '=', parent.company_id), ('deprecated', '=', False)]"/>
                </xpath>
                <xpath expr="//field[@name='comment']" position="after">
                    <group string="Signatories" col="3">
                        <group>
                            <field name="prepared_by_id"/>
                            <field name="prepared_by_desig"/>
                        </group>
                        <group>
                            <field name="approved_by"/>
                            <field name="approved_by_desig"/>
                        </group>
                        <group>
                            <field name="checked_by"/>
                            <field name="checked_by_desig"/>
                        </group>
                        <group>
                            <field name="received_by"/>
                            <field name="received_by_desig"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
        <!-- removed filter from vendor bill's account_id selection -->
        <record id="fos_view_account_invoice_form2" model="ir.ui.view">
            <field name="name">fos.view.account.invoice.supplier.form</field>
            <field name="model">account.invoice</field>
            <field name="priority" eval="101"/>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='other_info']/group/group/field[@name='account_id']" position="attributes">
                    <attribute name="domain">[('company_id', '=', company_id),('deprecated', '=', False)]</attribute>
                </xpath>
                <xpath expr="//page/field/tree/field[@name='account_id']" position="replace">
                    <field name="account_id" groups="account.group_account_user"
                        domain="[('company_id', '=', parent.company_id), ('deprecated', '=', False)]"/>
                </xpath>                
                <xpath expr="//field[@name='comment']" position="after">
                    <group string="Signatories" col="3">
                        <group>
                            <field name="prepared_by_id"/>
                            <field name="prepared_by_desig"/>
                        </group>
                        <group>
                            <field name="approved_by"/>
                            <field name="approved_by_desig"/>
                        </group>
                        <group>
                            <field name="checked_by"/>
                            <field name="checked_by_desig"/>
                        </group>
                        <group>
                            <field name="received_by"/>
                            <field name="received_by_desig"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>