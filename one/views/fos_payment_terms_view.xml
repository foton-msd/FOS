<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="fos_payment_terms_list">
      <field name="name">Payment Terms</field>
      <field name="model">fos.payment.terms</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- explicit form view definition -->
    <record model="ir.ui.view" id="fos_payment_terms_form">
      <field name="name">Payment Terms</field>
      <field name="model">fos.payment.terms</field>
      <field name="arch" type="xml">
        <form>
          <field name="name"/>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="fos_payment_terms_search">
      <field name="name">Search Payment Terms</field>
      <field name="model">fos.payment.terms</field>
      <field name="arch" type="xml">
        <search string="Payment Terms">
          <field name="name"/>
        </search>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="fos_payment_terms_action_window">
      <field name="name">Payment Terms</field>
      <field name="res_model">fos.payment.terms</field>
      <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="fos_sales_units_config" 
        name="Configuration"
        parent="fos_sales_units_root_menu" sequence="5"/>

    <menuitem name="Payment Terms" id="fos_payment_terms_menu"
	    parent="fos_sales_units_config" action="fos_payment_terms_action_window"
	    sequence="2" groups="one.msd_administrators"/>
  </data>
</odoo>
