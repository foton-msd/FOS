<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="view_one_local_names_tree">
      <field name="name">Local Names</field>
      <field name="model">one.local.names</field>
      <field name="arch" type="xml">
        <tree delete="false" create="false">
          <field name="name"/>
          <field name="classification"/>
        </tree>
      </field>
    </record>

    <!-- explicit form view definition -->
    <record model="ir.ui.view" id="view_one_local_name_form">
      <field name="name">Local Name</field>
      <field name="model">one.local.names</field>
      <field name="arch" type="xml">
        <form delete="false" create="false">
          <sheet>
            <h1><field name="name"/></h1>
            <field name="one_body_type_ids">
              <tree create="false" delete="false">
                <field name="name"/>
                <field name="description"/>
              </tree>
              <form>
                <sheet>
                  <group>
                    <field name="name" readonly="1"/>
                    <field name="description" readonly="1"/>
                  </group>
                  <field name="image_medium" widget="image" class="oe_avatar"/>
                </sheet>
              </form>
            </field>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="view_one_local_name_search">
      <field name="name">Search Local Names</field>
      <field name="model">one.local.names</field>
      <field name="arch" type="xml">
        <search string="Local Names">
          <field name="name"/>
          <field name="classification"/>
          <filter name="group_classification" string="Classification" icon="terp-partner" context="{'group_by':'classification'}"/>
          <filter name="group_name" string="Local Name" icon="terp-partner" context="{'group_by':'name'}"/>
        </search>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="act_window_one_local_names">
      <field name="name">Local Names</field>
      <field name="res_model">one.local.names</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{'search_default_group_name': 1, 'search_default_group_classification': 1}</field>
    </record>
    <!-- actions -->
    <menuitem name="Local Names" id="one_local_names_menu" parent="menu_fmpi_config"
	    groups="msd_administrators" sequence="2" action="act_window_one_local_names"/>
  </data>
</odoo>
