<odoo>
  <data>
    <record model="ir.ui.view" id="fas_company_form">
      <field name="name">Dealer ID</field>
      <field name="model">res.company</field>
      <field name="inherit_id" ref="base.view_company_form"/>
      <field name="arch" type="xml">
        <xpath expr="//form/sheet/notebook" position="inside">
          <page string="M.S.D. Settings" groups="one.msd_administrators">
            <group>
              <field name="is_fmpi"/>
              <field name="dealer_id" 
                attrs="{'required': [('is_fmpi','=',False)], 'invisible': [('is_fmpi','=',True)], 'required': [('is_fmpi','=',False)]}"/>              
              <field name="fmpi_host" required="1"/>   
              <field name="fmpi_port" required="1"/>   
              <field name="fmpi_pgu" required="1"/>   
              <field name="fmpi_pgp"  required="1" password="True"/>
              <field name="fmpi_pgn"  required="1"/>   
              <field name="dealer_host" attrs="{'invisible': [('is_fmpi','=',True)], 'required': [('is_fmpi','=',False)]}"/>
              <field name="dealer_port" attrs="{'invisible': [('is_fmpi','=',True)], 'required': [('is_fmpi','=',False)]}"/>
              <field name="dealer_pgu" attrs="{'invisible': [('is_fmpi','=',True)], 'required': [('is_fmpi','=',False)]}"/>
              <field name="dealer_pgp" attrs="{'invisible': [('is_fmpi','=',True)], 'required': [('is_fmpi','=',False)]}" password="True"/>
              <field name="dealer_pgn" attrs="{'invisible': [('is_fmpi','=',True)], 'required': [('is_fmpi','=',False)]}"/>
              <field name="ams_host" attrs="{'invisible': [('is_fmpi','=',False)], 'required': [('is_fmpi','=',True)]}"/>
              <field name="ams_port" attrs="{'invisible': [('is_fmpi','=',False)], 'required': [('is_fmpi','=',True)]}"/>
              <field name="ams_pgu" attrs="{'invisible': [('is_fmpi','=',False)], 'required': [('is_fmpi','=',True)]}"/>
              <field name="ams_pgp" attrs="{'invisible': [('is_fmpi','=',False)], 'required': [('is_fmpi','=',True)]}" password="True"/>
              <field name="ams_pgn" attrs="{'invisible': [('is_fmpi','=',False)], 'required': [('is_fmpi','=',True)]}"/>  
              <field name="api_host" required="1"/>
              <field name="api_user" required="1"/>
              <field name="api_pass" required="1" password="True"/>            
              <field name="inet_url" required="1"/>
              <field name="inet_user"/>
              <field name="inet_pass" password="True"/>
            </group>
          </page>
          <page string="Dealer's Sync &amp; Settings" 
            attrs="{'invisible': [('is_fmpi','=',True)]}"
            groups="one.msd_administrators">
            <group>
              <group string="Parts">
                <field name="parts_categ_id"/>
                <button name="sync_parts_master"
                  type="object" string="Sync Parts"
                  confirm="Are you sure to Sync Parts from FMPI?"
                />
              </group>
              <group string="Labor Codes">
                <field name="service_categ_id"/>
                <button name="sync_labor_codes"
                  type="object" string="Sync Labor Codes"
                  confirm="Are you sure to Sync Labor Codes from FMPI?"
                />
              </group>
              <group string="Warranty Codes">
                <field name="warranty_categ_id"/>
                <button name="sync_warranty_codes"
                  type="object" string="Sync Warranty Codes"
                  confirm="Are you sure to Sync Warranty Codes from FMPI?"
                />
              </group>
              <group string="Units">
                <field name="units_categ_id"/>
                <button name="sync_units"
                  type="object" string="Sync Units"
                  confirm="Are you sure to sync Units from FMPI?"
                />
              </group>
              <group string="Service History">
                <button name="action_sync_service_history"
                  type="object" string="Sync Service History"
                  confirm="Are you sure to Sync Service History from FMPI?"
                />
              </group>
            </group>
          </page>
          <page string="FMPI's Sync &amp; Settings" 
            attrs="{'invisible': [('is_fmpi','=',False)]}"
            groups="one.msd_administrators">
            <group string="AMS-to-ONe Sync Sequence">
              <group string="1. Dealers">
                <button name="action_sync_dealers"
                  type="object" string="Sync Dealer Profiles from AMS-to-ONe"
                  confirm="Are you sure to Sync Dealer Profiles from AMS-to-ONe?"/>
              </group>
              <group string="2. Local Names &amp; Variants">
                <button name="action_sync_local_names"
                  type="object" string="Sync Local Names &amp; Variants from AMS-to-ONe"
                  confirm="Click Ok button to confirm your action."/>
              </group>
              <group string="3. Units"/>                       
            </group>
          </page>
          <page string="Accounting">
            <group>
              <group>
                <field name="transfer_account_id" required="1"/>
              </group>
            </group>
          </page>
        </xpath>
      </field>
    </record>  
  </data>
</odoo>