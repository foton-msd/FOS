<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">
    <record id="nonf_cancel_ro_form" model="ir.ui.view">
      <field name="name">Reason to Cancel</field>
      <field name="model">nonf.cancel.ro</field>
      <field name="arch" type="xml">
        <form string="Reason to cancel" version="10.0">
          <group>
            <field name="name"/>
          </group>
          <footer>
            <button name="action_cancel" string="Confirm cancellation" 
              type="object" class="oe_highlight"/>
            or 
            <button string="Abort cancellation" class="oe_link" special="cancel" />
          </footer>
        </form>
      </field>
    </record>

    <record id="action_nonf_ro_cancel" model="ir.actions.act_window">
      <field name="name">Reason to Cancel</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">nonf.cancel.ro</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="nonf_cancel_ro_form"/>
      <field name="target">new</field>
    </record>
  </data> 
</odoo>
