<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">
    <record id="fmpi_vqir_pd_form" model="ir.ui.view">
      <field name="name">Paid Notes</field>
      <field name="model">fmpi.vqir.pd</field>
      <field name="arch" type="xml">
        <form string="Paid Notes" version="10.0">
          <group>
            <field name="name"/>
          </group>
          <footer>
            <button name="action_pd" string="Confirm your action" 
              type="object" class="oe_highlight"/>
            or 
            <button string="Cancel" class="oe_link" special="cancel" />
          </footer>
        </form>
      </field>
    </record>

    <record id="fmpi_vqir_pd_action" model="ir.actions.act_window">
      <field name="name">Paid Notes</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">fmpi.vqir.pd</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="fmpi_vqir_pd_form"/>
      <field name="target">new</field>
    </record>
  </data> 
</odoo>
