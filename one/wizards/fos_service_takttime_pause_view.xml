<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">
    <record id="service_takttime_pause_form" model="ir.ui.view">
      <field name="name">Pause Notes</field>
      <field name="model">service.takttime.pause</field>
      <field name="arch" type="xml">
        <form string="Pause Notes" version="10.0">
          <group>
            <field name="name"/>
          </group>
          <footer>
            <button name="action_pause" string="Confirm Pause" 
              type="object" class="oe_highlight"/>
            or 
            <button string="Cancel" class="oe_link" special="cancel" />
          </footer>
        </form>
      </field>
    </record>

    <record id="service_takttime_pause_action" model="ir.actions.act_window">
      <field name="name">Pause Notes</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">service.takttime.pause</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="service_takttime_pause_form"/>
      <field name="target">new</field>
    </record>
  </data> 
</odoo>
